@using Microsoft.AspNetCore.Identity

@model Auth.Models.ForumMessages

@{
    ViewData["Title"] = "CreateMessagesByTopic";

}

<h1>Create Messages On @TempData["TopicTitle"]</h1>

<h4>ForumMessage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMessagesByTopic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MessageTitle" class="control-label" aria-required="true"></label>
                <input asp-for="MessageTitle" class="form-control" />
                <span asp-validation-for="MessageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label" aria-required="true"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ForumTopicId" class="control-label" aria-required="true"></label>
                <select asp-for="ForumTopicId" class="form-control" >
                    <option value="@TempData["id"]">@TempData["TopicTitle"]</option>
                </select>
                <span asp-validation-for="ForumTopicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="create" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="MessagesByTopic" asp-route-forumTopicId="@TempData["id"]">Mesajlara Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

